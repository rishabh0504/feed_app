{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./", // <-- baseUrl must be set for paths to work
    "paths": {
      "@/*": ["src/*"], // Map imports starting with "@/..." to "src/..."
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],
      "@prisma/*": ["src/prisma/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
